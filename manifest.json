{
   "author": "Ivanov de Almeida",
   "background": {
      "persistent": true,
      "scripts": [ "scripts/background.js" ]
   },
   "browser_action": {
      "default_icon": "icons/icon-19.png",
      "default_title": "Ir para Ponto Mais"
   },
   "content_scripts": [ {
      "js": [ "scripts/contentscript.js" ],
      "matches": [ "https://app2.pontomais.com.br/*", "https://app.pontomais.com.br/*" ],
      "run_at": "document_end"
   } ],
   "description": "Veja o horário que você pode sair no Ponto Mais. Plugin não oficial.",
   "icons": {
      "128": "icons/icon-128.png",
      "48": "icons/icon-48.png"
   },
   "manifest_version": 2,
   "name": "Horário de Saída Ponto Mais",
   "permissions": [ 
      "https://app2.pontomais.com.br/*", "https://app.pontomais.com.br/*", "activeTab", "tabs", "storage"
   ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "1.0.0",
   "web_accessible_resources": [ "scripts/script.js" ]
}